<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DNDGame.MauiApp.Pages.CharacterCreatePage"
             Title="Create Character">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Create New Character" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>
            <Label Text="Character creation coming soon!" FontSize="16" TextColor="{StaticResource Gray600}" HorizontalOptions="Center" Margin="0,50,0,0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
