<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:DNDGame.MauiApp.ViewModels"
             x:Class="DNDGame.MauiApp.Pages.MainPage"
             x:DataType="viewmodels:MainViewModel"
             Title="DND Game">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30">
            
            <!-- App Logo/Title -->
            <Label Text="ðŸŽ² DND Game"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,20,0,40"/>

            <!-- Connectivity Status -->
            <Frame BorderColor="{StaticResource Primary}"
                   CornerRadius="10"
                   Padding="15">
                <HorizontalStackLayout Spacing="10">
                    <Label Text="{Binding IsConnected, StringFormat='â— {0}'}"
                           FontSize="14"
                           TextColor="{StaticResource Success}"/>
                    <Label Text="{Binding IsConnected, StringFormat='Status: {0}'}"
                           FontSize="14"/>
                </HorizontalStackLayout>
            </Frame>

            <!-- Sync Section -->
            <Frame BorderColor="{StaticResource Secondary}"
                   CornerRadius="10"
                   Padding="20"
                   Margin="0,10,0,0">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Data Synchronization"
                           FontSize="18"
                           FontAttributes="Bold"/>
                    
                    <Label Text="{Binding SyncStatus}"
                           FontSize="14"
                           TextColor="{StaticResource Gray600}"/>
                    
                    <Label Text="{Binding LastSyncTime, StringFormat='Last Sync: {0:g}'}"
                           FontSize="12"
                           TextColor="{StaticResource Gray500}"/>
                    
                    <Button Text="Sync Now"
                            Command="{Binding SyncDataCommand}"
                            IsEnabled="{Binding IsConnected}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            CornerRadius="8"/>
                    
                    <ActivityIndicator IsRunning="{Binding IsSyncing}"
                                     IsVisible="{Binding IsSyncing}"
                                     Color="{StaticResource Primary}"
                                     WidthRequest="30"
                                     HeightRequest="30"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Navigation Buttons -->
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="15" RowSpacing="15" Margin="0,20,0,0">
                
                <!-- Characters Button -->
                <Frame Grid.Row="0" Grid.Column="0"
                       BorderColor="{StaticResource Primary}"
                       CornerRadius="15"
                       Padding="0"
                       HasShadow="True">
                    <Button Text="ðŸ“œ&#x0a;Characters"
                            Command="{Binding NavigateToCharactersCommand}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            FontSize="16"
                            HeightRequest="120"
                            CornerRadius="15"/>
                </Frame>

                <!-- Sessions Button -->
                <Frame Grid.Row="0" Grid.Column="1"
                       BorderColor="{StaticResource Secondary}"
                       CornerRadius="15"
                       Padding="0"
                       HasShadow="True">
                    <Button Text="ðŸ°&#x0a;Sessions"
                            Command="{Binding NavigateToSessionsCommand}"
                            BackgroundColor="{StaticResource Secondary}"
                            TextColor="White"
                            FontSize="16"
                            HeightRequest="120"
                            CornerRadius="15"/>
                </Frame>

                <!-- Dice Roller Button -->
                <Frame Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                       BorderColor="{StaticResource Tertiary}"
                       CornerRadius="15"
                       Padding="0"
                       HasShadow="True">
                    <Button Text="ðŸŽ² Dice Roller"
                            Command="{Binding NavigateToDiceCommand}"
                            BackgroundColor="{StaticResource Tertiary}"
                            TextColor="White"
                            FontSize="18"
                            HeightRequest="80"
                            CornerRadius="15"/>
                </Frame>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
