@page "/characters"
@using DNDGame.Core.Entities
@using DNDGame.Core.Interfaces
@using DNDGame.Application.DTOs
@inject ICharacterService CharacterService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Characters - DND Game</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>My Characters</h1>
    <button class="btn btn-primary" @onclick="NavigateToCreate">
        <span class="bi bi-plus-circle"></span> Create New Character
    </button>
</div>

@if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p>Loading characters...</p>
    </div>
}
else if (errorMessage is not null)
{
    <div class="alert alert-danger" role="alert">
        @errorMessage
    </div>
}
else if (!characters.Any())
{
    <div class="alert alert-info">
        <h4>No characters yet!</h4>
        <p>Create your first character to begin your adventure.</p>
        <button class="btn btn-primary" @onclick="NavigateToCreate">Create Character</button>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var character in characters)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card character-card h-100" @onclick="() => ViewCharacter(character.Id)">
                    <div class="card-body">
                        <h5 class="card-title">@character.Name</h5>
                        <p class="text-muted mb-2">Level @character.Level @character.Class</p>
                        
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <small class="text-muted">HP</small>
                                <div class="fw-bold">@character.HitPoints / @character.MaxHitPoints</div>
                            </div>
                            <div>
                                <small class="text-muted">AC</small>
                                <div class="fw-bold">@character.ArmorClass</div>
                            </div>
                            <div>
                                <small class="text-muted">Prof</small>
                                <div class="fw-bold">+@character.ProficiencyBonus</div>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button class="btn btn-sm btn-outline-primary" @onclick:stopPropagation="true" @onclick="() => ViewCharacter(character.Id)">
                                View
                            </button>
                            <button class="btn btn-sm btn-outline-danger" @onclick:stopPropagation="true" @onclick="() => DeleteCharacter(character.Id)">
                                Delete
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<Character> characters = new();
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadCharacters();
    }

    private async Task LoadCharacters()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            // For demo, using player ID 1
            var result = await CharacterService.GetAllCharactersByPlayerAsync(1);
            characters = result.Cast<Character>().ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load characters: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NavigateToCreate()
    {
        Navigation.NavigateTo("/characters/create");
    }

    private void ViewCharacter(int id)
    {
        Navigation.NavigateTo($"/characters/{id}");
    }

    private async Task DeleteCharacter(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this character?"))
        {
            try
            {
                await CharacterService.DeleteCharacterAsync(id);
                await LoadCharacters();
            }
            catch (Exception ex)
            {
                errorMessage = $"Failed to delete character: {ex.Message}";
            }
        }
    }
}
