@page "/dice"
@using DNDGame.Core.Interfaces
@using DNDGame.Core.Models
@inject IDiceRoller DiceRoller

<PageTitle>Dice Roller - DND Game</PageTitle>

<div class="container-md">
    <h1>ðŸŽ² Dice Roller</h1>
    <p class="text-muted">Enter a dice formula (e.g., 1d20, 2d6+3, 4d8-1)</p>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Dice Formula</label>
                        <input type="text" class="form-control" @bind="formula" @bind:event="oninput" placeholder="1d20+5" />
                    </div>

                    <div class="d-flex gap-2 mb-3">
                        <button class="btn btn-primary" @onclick="RollDice">Roll</button>
                        <button class="btn btn-success" @onclick="RollWithAdvantage">Advantage</button>
                        <button class="btn btn-warning" @onclick="RollWithDisadvantage">Disadvantage</button>
                    </div>

                    <div class="d-flex gap-2 flex-wrap">
                        <button class="btn btn-sm btn-outline-secondary" @onclick="@(() => formula = "1d4")">d4</button>
                        <button class="btn btn-sm btn-outline-secondary" @onclick="@(() => formula = "1d6")">d6</button>
                        <button class="btn btn-sm btn-outline-secondary" @onclick="@(() => formula = "1d8")">d8</button>
                        <button class="btn btn-sm btn-outline-secondary" @onclick="@(() => formula = "1d10")">d10</button>
                        <button class="btn btn-sm btn-outline-secondary" @onclick="@(() => formula = "1d12")">d12</button>
                        <button class="btn btn-sm btn-outline-secondary" @onclick="@(() => formula = "1d20")">d20</button>
                        <button class="btn btn-sm btn-outline-secondary" @onclick="@(() => formula = "1d100")">d100</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            @if (lastRoll is not null)
            {
                <div class="card @GetRollClass()">
                    <div class="card-body">
                        <h5 class="card-title">Result</h5>
                        <div class="display-4 mb-3">@lastRoll.Total</div>
                        
                        <div class="mb-2">
                            <strong>Formula:</strong> @lastRoll.Formula
                        </div>
                        
                        @if (lastRoll.IndividualRolls.Length > 1)
                        {
                            <div class="mb-2">
                                <strong>Rolls:</strong> [@string.Join(", ", lastRoll.IndividualRolls)]
                            </div>
                        }
                        
                        @if (lastRoll.Modifier != 0)
                        {
                            <div class="mb-2">
                                <strong>Modifier:</strong> @(lastRoll.Modifier > 0 ? "+" : "")@lastRoll.Modifier
                            </div>
                        }
                        
                        @if (IsCriticalHit(lastRoll))
                        {
                            <div class="alert alert-success mt-2">ðŸŽ‰ Critical Hit!</div>
                        }
                        else if (IsCriticalFumble(lastRoll))
                        {
                            <div class="alert alert-danger mt-2">ðŸ’€ Critical Fumble!</div>
                        }
                    </div>
                </div>
            }
            else if (errorMessage is not null)
            {
                <div class="alert alert-danger">
                    @errorMessage
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center text-muted">
                        <p>Roll some dice to see results here</p>
                    </div>
                </div>
            }
        </div>
    </div>

    @if (history.Any())
    {
        <div class="mt-4">
            <h3>Roll History</h3>
            <div class="list-group">
                @foreach (var roll in history.Take(10))
                {
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>@roll.Formula</strong>
                            @if (roll.IndividualRolls.Length > 1)
                            {
                                <span class="text-muted small ms-2">[@string.Join(", ", roll.IndividualRolls)]</span>
                            }
                        </div>
                        <span class="badge bg-primary rounded-pill">@roll.Total</span>
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    private string formula = "1d20";
    private DiceRollResult? lastRoll;
    private string? errorMessage;
    private List<DiceRollResult> history = new();

    private void RollDice()
    {
        try
        {
            errorMessage = null;
            lastRoll = DiceRoller.Roll(formula);
            history.Insert(0, lastRoll);
        }
        catch (Exception ex)
        {
            errorMessage = $"Invalid dice formula: {ex.Message}";
            lastRoll = null;
        }
    }

    private void RollWithAdvantage()
    {
        try
        {
            errorMessage = null;
            lastRoll = DiceRoller.RollWithAdvantage(formula);
            history.Insert(0, lastRoll);
        }
        catch (Exception ex)
        {
            errorMessage = $"Invalid dice formula: {ex.Message}";
            lastRoll = null;
        }
    }

    private void RollWithDisadvantage()
    {
        try
        {
            errorMessage = null;
            lastRoll = DiceRoller.RollWithDisadvantage(formula);
            history.Insert(0, lastRoll);
        }
        catch (Exception ex)
        {
            errorMessage = $"Invalid dice formula: {ex.Message}";
            lastRoll = null;
        }
    }

    private string GetRollClass()
    {
        if (lastRoll is null) return "";
        if (IsCriticalHit(lastRoll)) return "border-success";
        if (IsCriticalFumble(lastRoll)) return "border-danger";
        return "";
    }

    private bool IsCriticalHit(DiceRollResult roll)
    {
        // Check if it's a d20 roll and the result is 20
        return roll.Formula.Contains("d20") && roll.IndividualRolls.Any(r => r == 20);
    }

    private bool IsCriticalFumble(DiceRollResult roll)
    {
        // Check if it's a d20 roll and the result is 1
        return roll.Formula.Contains("d20") && roll.IndividualRolls.Any(r => r == 1);
    }
}
